{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "esnext",
    "esModuleInterop": true,
    "strict": true,
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "allowJs": true // prevent eslint parsing error
  },
  "include": ["src", "eslint.config.js"],
  "exclude": ["node_modules"]
}
